{
  "name": "aac-board-viewer",
  "version": "0.2.6",
  "description": "Universal AAC board viewer component for React. Supports GridSet, TouchChat, SNAP, OpenBoard, Asterics, Apple Panels, and more.",
  "keywords": [
    "aac",
    "augmentative communication",
    "board viewer",
    "gridset",
    "touchchat",
    "snap",
    "openboard",
    "obf",
    "asterics",
    "apple-panels",
    "accessibility",
    "react",
    "components"
  ],
  "author": "Will Wade",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/willwade/aac-board-viewer.git"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./board-viewer": {
      "types": "./dist/board-viewer.d.ts",
      "import": "./dist/board-viewer.mjs",
      "require": "./dist/board-viewer.js"
    },
    "./styles": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsup",
    "build:demo": "npm --prefix demo run build",
    "preview": "vite preview",
    "lint": "eslint src --ext ts,tsx",
    "type-check": "tsc --noEmit"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "dependencies": {
    "@willwade/aac-processors": "^0.1.17"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "@types/react-dom": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.23",
    "eslint": "^9.0.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  }
}
